{
  "$schema": "https://demodapk.netlify.app/schema.json",
  "DemodAPK": {
    "com.crunchyroll.crunchyroid": {
      "app_name": "Funimation",
      "package": "com.crunchyroll.funimation",
      "apkeditor": {
        "dex": false,
        "output": "./build/Funimation"
      },
      "commands": {
        "quietly": true,
        "begin": [
          {
            "title": "Enable [green]HideAds[/green]",
            "run": "python ./patch.py"
          },
          {
            "title": "Update [cyan]@values/colors[/cyan]",
            "run": "python ./colors.py -w -nd"
          },
          {
            "title": "Update [cyan]@drawable[/cyan]",
            "run": "cp ./assets/drawable/funimation/*.xml $BASE_RESDIR/drawable/"
          }
        ]
      }
    }
  }
}
